---
interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    {items.map((item, index) => (
      <li class="breadcrumb-item">
        {index < items.length - 1 ? (
          <>
            <a href={item.url} class="breadcrumb-link">{item.name}</a>
            <svg class="breadcrumb-sep" width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
              <path d="M4.5 2.5L8 6L4.5 9.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </>
        ) : (
          <span class="breadcrumb-current" aria-current="page">{item.name}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    padding: var(--space-3) 0;
  }

  .breadcrumb-list {
    list-style: none;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-1);
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .breadcrumb-link {
    font-size: var(--text-caption);
    color: var(--color-ocean-teal);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb-link:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  .breadcrumb-sep {
    color: var(--color-slate);
    opacity: 0.4;
    flex-shrink: 0;
  }

  .breadcrumb-current {
    font-size: var(--text-caption);
    color: var(--color-slate);
  }
</style>
