---
import '../styles/global.css';
import FloatingNav from '../components/FloatingNav.astro';
import Footer from '../components/Footer.astro';
import SchemaMarkup from '../components/SchemaMarkup.astro';
import CookieConsent from '../components/CookieConsent.astro';
import NetworkRibbon from '../components/NetworkRibbon.astro';
import NetworkFooterStrip from '../components/NetworkFooterStrip.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  pageType?: 'homepage' | 'destination' | 'blog' | 'author';
  schemaData?: Record<string, any>;
  faqItems?: { question: string; answer: string }[];
  breadcrumbs?: { name: string; url: string }[];
  locale?: 'en' | 'vi';
}

const {
  title,
  description = 'Your immersive guide to the Vietnamese islands — 360° video, local tips, and honest recommendations.',
  ogImage = '/images/og-default.jpg',
  pageType = 'homepage',
  schemaData = {},
  faqItems,
  breadcrumbs,
  locale,
} = Astro.props;

// Detect locale from URL if not explicitly passed
const detectedLocale = locale || (Astro.url.pathname.startsWith('/vi/') ? 'vi' : 'en');
const htmlLang = detectedLocale === 'vi' ? 'vi' : 'en';

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://discovervietnam.info');

// Build alternate language URLs for hreflang tags
const siteBase = Astro.site || 'https://discovervietnam.info';
const currentPath = Astro.url.pathname;
const enPath = currentPath.startsWith('/vi/') ? currentPath.replace(/^\/vi\//, '/') : currentPath;
const viPath = currentPath.startsWith('/vi/') ? currentPath : `/vi${currentPath}`;
const enURL = new URL(enPath, siteBase);
const viURL = new URL(viPath, siteBase);

// Ensure OG image is an absolute URL for social platforms
const ogImageAbsolute = ogImage.startsWith('http') ? ogImage : new URL(ogImage, siteBase).href;
---
<!DOCTYPE html>
<html lang={htmlLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="agd-partner-manual-verification" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang="en" href={enURL} />
    <link rel="alternate" hreflang="vi" href={viURL} />
    <link rel="alternate" hreflang="x-default" href={enURL} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <title>{title} | Discover Vietnam</title>
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Discover Vietnam`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageAbsolute} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Discover Vietnam`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageAbsolute} />

    <SchemaMarkup pageType={pageType} data={schemaData} faqItems={faqItems} breadcrumbs={breadcrumbs} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to content</a>

    <NetworkRibbon />
    <FloatingNav />

    <main id="main-content" class="main-content pb-20 md:pb-0">
      <slot />
    </main>

    <Footer />
    <NetworkFooterStrip />
    <CookieConsent />

    <!-- GetYourGuide Analytics -->
    <script async defer src="https://widget.getyourguide.com/dist/pa.umd.production.min.js" data-gyg-partner-id="IVN6IQ3"></script>

    <style>
      :root {
        --ribbon-height: 0px;
      }
      @media (min-width: 768px) {
        .main-content {
          padding-top: calc(64px + var(--ribbon-height, 0px));
        }
      }
    </style>
  </body>
</html>